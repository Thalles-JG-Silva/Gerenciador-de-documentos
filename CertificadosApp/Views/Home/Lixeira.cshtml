        <button type="button" class="btn btn-verde" onclick="restaurarcertificado()">Restaurar</button>
        <button type="button" class="btn btn-roxo" onclick="window.location.href='@Url.Action("PaginaPrincipal", "Home")'">Voltar</button>
        <button type="button" class="btn btn-vermelho" onclick="excluirCertificado()">Excluir Permanentemente</button>
    </div>
</main>
