@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Página Principal";
}

<!-- Conteúdo principal -->
<main class="registration-form mx-auto">
    <h1 class="text-center text-white">Certificados Gerados</h1>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <div class="search-bar">
                    <input type="text" id="searchInput" onkeyup="searchCertificates()" placeholder="Pesquisar certificados...">
                </div>
                <tr>
                    <th scope="col"><input type="checkbox" id="selectAll" onclick="toggleAll(this)"> Selecionar Todos</th>
                    <th scope="col">Título</th>
                    <th scope="col">Data</th>
                    <th scope="col">Participante/Ministrante</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><input type="checkbox" name="selectedCert" value="cert1"></td>
                    <td>Palestra de Tecnologia</td>
                    <td>2024-04-15</td>
                    <td>Ana Paula Montegrande</td>
                </tr>
                <tr>
                    <td><input type="checkbox" name="selectedCert" value="cert2"></td>
                    <td>Workshop de Machine Learning</td>
                    <td>2024-05-01</td>
                    <td>Beatriz Almeida</td>
                </tr>
                <tr>
                    <td><input type="checkbox" name="selectedCert" value="cert3"></td>
                    <td>Conferência de Design UX</td>
                    <td>2024-06-12</td>
                    <td>Rafael Costa</td>
                </tr>
                <tr>
                    <td><input type="checkbox" name="selectedCert" value="cert4"></td>
                    <td>Simpósio de Sustentabilidade</td>
                    <td>2024-07-20</td>
                    <td>Larissa Gonçalves</td>
                </tr>
                <tr>
                    <td><input type="checkbox" name="selectedCert" value="cert5"></td>
                    <td>Curso de Desenvolvimento Web</td>
                    <td>2024-08-05</td>
                    <td>Carlos Magno</td>
                </tr>
                <tr>
                    <td><input type="checkbox" name="selectedCert" value="cert6"></td>
                    <td>Fórum de Inovação Tecnológica</td>
                    <td>2024-09-15</td>
                    <td>Juliana Martins</td>
                </tr>
                <tr>
                    <td><input type="checkbox" name="selectedCert" value="cert7"></td>
                    <td>Debate sobre Educação a Distância</td>
                    <td>2024-10-22</td>
                    <td>Marcos Oliveira</td>
                </tr>
                <tr>
                    <td><input type="checkbox" name="selectedCert" value="cert8"></td>
                    <td>Exposição de Arte Digital</td>
                    <td>2024-11-03</td>
                    <td>Sofia Castro</td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Botões de ações -->
    <div class="button-group text-center">
        <button type="button" onclick="imprimirPDF('Certificado Teste.pdf')" class="btn btn-verde">Imprimir</button>
        <button type="button" class="btn btn-roxo" onclick="window.location='@Url.Action("Editar", "Certificado")'">Editar</button>
        <button type="button" onclick="openCertificate()" class="btn btn-amarelo">Exibir</button>
        <button type="button" class="btn btn-vermelho" onclick="excluirCertificado()">Excluir</button>
    </div>
</main>

<!-- Scripts necessários para Bootstrap e funcionalidades -->
<script src="~/js/site.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
